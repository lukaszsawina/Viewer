    </None>
    <None Update="Images\icon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Test\test.ply">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Test\test.ply">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
