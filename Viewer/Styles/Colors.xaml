<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">#0F0F0F</Color>
    <Color x:Key="SecondaryColor">#3A3A3A</Color>
    <Color x:Key="TextColor">#B3B3B3</Color>
    <Color x:Key="OrangedColor">#F77F00</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource OrangedColor}"/>

</ResourceDictionary>